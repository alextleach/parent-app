<div class="container">
  <div class="card-container">
    <div class="row">
      <div class="card-card__title col s12 center-align">Login Below</div>
    </div>

    <div class="row">
       {{#simple-form onsubmit=(action "loginUser") class="col s12" as |inputs|}}
        <div class="row">
          <div class="input-field col s12">
            {{input id="email" type="email" class="validate" value=inputs.email}}
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            {{input id="password" type="password" class="validate" value=inputs.password}}
            <label for="password">Password</label>
          </div>
        </div>
        <div class="form-action center-align">
          <button type="submit" class="btn col s12 card-btn btn-large login-btn"><i class="fa fa-arrow-right"></i></button>
          <div class="btn forgot-btn">Forgot your password?</div>
        </div>
      {{/simple-form}}
    </div>
  </div>
</div>

{{outlet}}
