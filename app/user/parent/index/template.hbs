<div class="parent-sitter-banner">
  <div class="grid-container">
    <div class="parent-sitter-banner__content">
      <p>
        You are viewing families in your area.

        {{!-- {{#if (eq session.currentUser.accountType "parent")}} --}}
          {{#link-to "user.sitter.index"}}
          View sitters instead.
          {{/link-to}}
        </p>
        {{!-- {{/if}} --}}
    </div>
  </div>
</div>
<div class="grid-container">
  <div class="row section">
    <div class="row card-row col s6 m12">
      {{#each model as |parent|}}
        <div class="col s12 m4">
          <div class="card sitter-card">
            {{#link-to "user.parent.view" parent.profile.id}}
              <div class="card-image">
                <div class="card-image__wrapper">
                  <img src="{{ parent.profile.fullUserPicUrl }}">
                </div>
                <div class="card-image-gradient">
                  <span class="card-title">{{ parent.profile.firstName }}</span>
                </div>
              </div>
            {{/link-to}}

            <div class="card-content family-info">
              <p class="truncate">{{parent.profile.userBlurb}}</p>
              <p><strong>Number of kids:</strong> {{ parent.profile.children.length }}</p>
              <br>
              <div class="family-info-2">

                <div class="their-location truncate"><i class="fa fa-map-pin"> </i><span class="profile-location"> {{ parent.profile.location }}</span></div>
                <div class="star-rating right-align">
                  {{#each (range 1 6) as |value|}}
                    <i {{action "selectRating" parent value}} class="fa {{if (gte parent.profile.myRatingValue value) "fa-star" "fa-star-o"}}"></i>
                  {{/each}}
                </div>
              </div>
            </div>
            <div class="card-action user-action-icons">
              {{#link-to 'user.parent.view' parent.id class="user-action-icons__button" }}
                <i class="fa fa-eye user-action-icons__item"></i>
              {{/link-to}}
              <span class="user-action-icons__button">
                <i {{action "workPlease" parent }} class="fa {{if parent.profile.isLiked "fa-thumbs-up" "fa-thumbs-o-up"}}"></i>
              </span>
              {{#link-to 'user.conversation.start' parent.id class="user-action-icons__button" }}
                <i class="fa fa-envelope-o user-action-icons__item"></i>
              {{/link-to}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
