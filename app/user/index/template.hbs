<div class="card-container">
  <div class="row">
    <div class="card-card__title col s12 center-align">What are you looking for today?</div>
  </div>

  <div class="row">
    <p class="user-select">I am looking for</p>
    <form action="#">

      <div class="select">
        <div class="select__item">
          {{#link-to "user.sitter.index"}}
            <div class="img-wrapper">
              <img src="http://cachevalleyfamilymagazine.com/wp-content/uploads/2015/04/babysitting.jpg">
            </div>
          {{/link-to}}
          <p class="choice">
            <h5>A Babysitter</h5>
          </p>
        </div>

        <div class="select__item">
          {{#link-to "user.parent.index"}}
            <div class="img-wrapper">
              <img src="https://patcegan.files.wordpress.com/2012/01/kids-playing-in-the-sandbox1.jpg">
            </div>
          {{/link-to}}
          <p class="choice">
            <h5>A Playdate</h5>
          </p>
        </div>
      </div>

    </form>

  </div>
</div>

{{outlet}}
